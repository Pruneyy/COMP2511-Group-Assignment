<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane styleClass="rootPane" stylesheets="@style.css" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <BorderPane fx:id="game" minHeight="350" minWidth="500" />
      <Pane opacity="0.35" style="-fx-background-color: black;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
      <VBox AnchorPane.leftAnchor="200.0" AnchorPane.topAnchor="150.0">
          <Button id="start" fx:id="start" mnemonicParsing="false" onAction="#handleNewGamePress" prefHeight="30.0" prefWidth="100.0" style="-fx-background-radius: 5, 4, 3, 5; -fx-background-insets: 0,1,2,0;" text="Start Game">
              <cursor>
                  <Cursor fx:constant="HAND" />
              </cursor>
          </Button>
          <Button id="generate" fx:id="generate" mnemonicParsing="false" onAction="#handleGenerateGamePress" prefHeight="30.0" prefWidth="100.0" style="-fx-background-radius: 5, 4, 3, 5; -fx-background-insets: 0,1,2,0;" text="Options">
              <cursor>
                  <Cursor fx:constant="HAND" />
              </cursor>
              <VBox.margin>
                  <Insets top="10.0" />
              </VBox.margin>
          </Button>
          <Button id="quit" fx:id="quit" mnemonicParsing="false" onAction="#handleQuitPress" prefHeight="30.0" prefWidth="100.0" style="-fx-background-radius: 5, 4, 3, 5; -fx-background-insets: 0,1,2,0;" text="Quit">
              <cursor>
                  <Cursor fx:constant="HAND" />
              </cursor>
              <VBox.margin>
                  <Insets top="10.0" />
              </VBox.margin>
          </Button>
		</VBox>
      <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Gridlock!" AnchorPane.leftAnchor="150.0" AnchorPane.topAnchor="32.0">
         <font>
            <Font size="56.0" />
         </font>
      </Text>
   </children>
</AnchorPane>
